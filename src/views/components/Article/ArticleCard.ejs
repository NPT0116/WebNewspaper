<div class="flex justify-center items-center flex-col animate__animated animate__fadeInRight" style="width: 80vw">
  <div
    class="flex flex-col sm:flex-row justify-between items-center w-full border-b-2 border-gray-600"
    style="height: 60vh; padding-left: 20px; padding: 40px 20px"
  >
    <div class="w-full sm:w-4/5 sm:pr-[20px] ">
      <div class="sm:h-2/5 hidden sm:flex gap-2 justify-start items-center flex-wrap" style="height: 20%">
        <div class="bg-red-700 text-xs text-white rounded-lg p-2 font-bold hover:scale-105 duration-300 cursor-pointer">
          <a  href="/search-page?section=<%=article.sectionId.slug%>">
            #<%=article.sectionId.name%>
          </a>
        </div>
        <% article.tags.forEach(tag => { %>
        <a 
          class="bg-gray-700 text-xs text-white rounded-lg p-2 font-bold hover:scale-105 duration-300"
          href="/search-page?tags=<%=tag.slug%>">
          #<%= tag.name %>
        </a>
        <% }) %>
        <% if (article.isSubscribed) { %>
        <div class="bg-gradient-45 text-xs text-white rounded-lg p-2 font-bold hover:scale-105 transition-color duration-300">#Subscribe</div>
        <% } %>
      </div>

      <a 
        class="sm:h-4/5 w-full font-serif flex flex-col gap-2 justify-between items-center mt-5"
        href="/section/<%= article.sectionId.slug %>/article/<%= article.slug %>?isSubscribed=<%= article.isSubscribed %>"
      >
        <h2 class=" text-left sm:text-3xl text-xl font-bold hover:underline  <% if (article.isSubscribed) { %>text-red-500<% } %>"><%= article.title %></h2>
        <h1 class="w-full relative hidden md:block text-lg">
          <% if(article.isSubscribed && profile && profile.isSubscriber || !article.isSubscribed) { %>
          <h1 class="hidden md:block font-dancing italic text-gray-500 hover:text-gray-800 transition-color duration-300"><%= article.description %></h1>
          <% } %>
        </h1>
        <div class="sm:text-sm text-[12px] self-end font-bold text-black hover:underline transition-color duration-200 italic">"<%= article.author.name %>"</div>
      </a>
    </div>

    <a 
      class="w-full h-4/5 sm:w-4/5 sm:h-full flex justify-end items-center"     
      href="/section/<%= article.sectionId.slug %>/article/<%= article.slug %>?isSubscribed=<%= article.isSubscribed %>"
    >
      <img class="object-cover sm:rounded-lg rounded-md shadow-lg hover:scale-105 transition-all duration-300 w-full h-full" src="<%= article.images[0] %>" alt="<%= article.title %>" />
    </a>
  </div>
</div>
