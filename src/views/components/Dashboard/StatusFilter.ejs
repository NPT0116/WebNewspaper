<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <style>
    :root {
      --color-all: #3f83f8;
      --color-published: #78c67a;
      --color-draft: #afb0ab;
      --color-pending: #fff398;
      --color-rejected: #ff5757;

      --link-bg-color: var(--color-all); /* Màu nền mặc định */
      --link-color: var(--text-color); /* Màu chữ mặc định */

      --text-color-pending: #333;
      --text-color: white;
    }

    .menu {
      font-size: 16px;
      line-height: 1.6;
      color: #000000;
      width: fit-content;
      display: flex;
      list-style: none;
    }

    .menu a {
      text-decoration: none;
      color: inherit;
      font-family: inherit;
      font-size: inherit;
      line-height: inherit;
    }

    .menu .link {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      width: 150px;
      padding: 12px 36px;
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.48s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .menu .link::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: var(--link-bg-color);
      z-index: -1;
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 0.48s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .menu .link svg {
      width: 14px;
      height: 14px;
      fill: #000000;
      transition: all 0.48s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .menu .item {
      position: relative;
    }

    .menu .item .submenu {
      display: flex;
      flex-direction: column;
      align-items: center;
      position: absolute;
      top: 100%;
      border-radius: 0 0 16px 16px;
      left: 0;
      width: 100%;
      overflow: hidden;
      border: 1px solid #cccccc;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-12px);
      transition: all 0.48s cubic-bezier(0.23, 1, 0.32, 1);
      z-index: 1;
      pointer-events: none;
      list-style: none;
      background-color: white;
    }

    .menu .item:hover .submenu {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
      pointer-events: auto;
      border-top: transparent;
      border-color: #3f83f8;
    }

    .menu .item:hover .link {
      color: var(--link-color);
      border-radius: 16px 16px 0 0;
    }

    .menu .item:hover .link::after {
      transform: scaleX(1);
      transform-origin: right;
    }

    .menu .item:hover .link svg {
      fill: var(--link-color);
      transform: rotate(-180deg);
    }

    .submenu .submenu-item {
      width: 100%;
      transition: all 0.48s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .submenu .submenu-link {
      display: block;
      padding: 12px 24px;
      width: 100%;
      position: relative;
      text-align: center;
      transition: all 0.48s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .submenu .submenu-item:last-child .submenu-link {
      border-bottom: none;
    }

    .submenu .submenu-link::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      transform: scaleX(0);
      width: 100%;
      height: 100%;
      z-index: -1;
      transform-origin: left;
      transition: transform 0.48s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .submenu .submenu-link.all::before {
      background-color: var(--color-all);
    }

    .submenu .submenu-link.draft::before {
      background-color: var(--color-draft);
    }

    .submenu .submenu-link.published::before {
      background-color: var(--color-published);
    }

    .submenu .submenu-link.pending::before {
      background-color: var(--color-pending);
    }

    .submenu .submenu-link.rejected::before {
      background-color: var(--color-rejected);
    }

    .submenu .submenu-link:hover:before {
      transform: scaleX(1);
      transform-origin: right;
    }

    .submenu .submenu-link:hover {
      font-weight: bold;
      color: #ffffff;
    }
    .submenu .pending:hover {
      font-weight: bold;
      color: #333;
    }
  </style>
  <body>
    <div class="flex items-center">
      <label for="statusFilter">Filter by Status:</label>
      <div class="menu">
        <div class="item">
          <a href="#" class="link">
            <span> All </span>
            <!-- Nội dung hiển thị tại đây -->
            <svg viewBox="0 0 360 360" xml:space="preserve">
              <g id="SVGRepo_iconCarrier">
                <path
                  id="XMLID_225_"
                  d="M325.607,79.393c-5.857-5.857-15.355-5.858-21.213,0.001l-139.39,139.393L25.607,79.393 c-5.857-5.857-15.355-5.858-21.213,0.001c-5.858,5.858-5.858,15.355,0,21.213l150.004,150c2.813,2.813,6.628,4.393,10.606,4.393 s7.794-1.581,10.606-4.394l149.996-150C331.465,94.749,331.465,85.251,325.607,79.393z"
                ></path>
              </g>
            </svg>
          </a>
          <div class="submenu">
            <div class="submenu-item">
              <a href="#" class="submenu-link all" data-color="var(--color-all)" text-color="var(--text-color)" data-status="All"> All </a>
            </div>
            <div class="submenu-item">
              <a href="#" class="submenu-link draft" data-color="var(--color-draft)" text-color="var(--text-color)" data-status="draft"> Draft </a>
            </div>
            <div class="submenu-item">
              <a href="#" class="submenu-link published" data-color="var(--color-published)" text-color="var(--text-color)" data-status="published"> Published </a>
            </div>
            <div class="submenu-item">
              <a href="#" class="submenu-link pending" data-color="var(--color-pending)" text-color="var(--text-color-pending)" data-status="pending"> Pending </a>
            </div>
            <div class="submenu-item">
              <a href="#" class="submenu-link rejected" data-color="var(--color-rejected)" text-color="var(--text-color)" data-status="rejected"> Rejected </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Lấy tất cả các mục submenu
      const submenuLinks = document.querySelectorAll('.submenu-link');
      const menuLink = document.querySelector('.menu .link');

      const mainMenuDisplay = document.querySelector('.menu .link span');

      // Lắng nghe sự kiện click trên mỗi submenu item
      submenuLinks.forEach((link) => {
        link.addEventListener('click', function (e) {
          // Ngừng sự kiện mặc định của thẻ <a>
          e.preventDefault();

          const selectedColor = link.getAttribute('data-color');
          const textColor = link.getAttribute('text-color');
          const selectedStatus = e.target.textContent;

          mainMenuDisplay.textContent = selectedStatus;

          const status = e.target.getAttribute('data-status');
          menuLink.style.setProperty('--link-bg-color', selectedColor);
          menuLink.style.setProperty('--link-color', textColor);
          const filteredData = status === 'All' ? data.articles : data.articles.filter((item) => item.status === status);

          _table = $('#example').DataTable();
          _table.clear();
          _table.rows.add(filteredData);
          _table.draw();
        });
      });
    </script>
  </body>
</html>
