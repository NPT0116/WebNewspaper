<style>
  .buttonContainer {
    display: flex;
    gap: 20px;
    flex-direction: row;
  }

  .acceptButton {
    width: 80px;
    height: 30px;
    background-color: white;
    transition-duration: 0.2s;
    border: 1px #bb9a57 solid;
    color: #bb9a57;
    cursor: pointer;
    font-weight: 600;
    border-radius: 20px;
    box-shadow:
      0 4px 6px -1px #bb9a57,
      0 2px 4px -1px #bb9a57;
    transition: all 0.6s ease;
  }

  .declineButton {
    width: 80px;
    height: 30px;
    background-color: #dadada;
    transition-duration: 0.2s;
    color: rgb(46, 46, 46);
    border: none;
    cursor: not-allowed;
    font-weight: 600;
    border-radius: 20px;
    box-shadow:
      0 4px 6px -1px #bebdbd,
      0 2px 4px -1px #bebdbd;
    transition: all 0.6s ease;
  }

  .declineButton:hover {
    background-color: #ebebeb;
    box-shadow:
      0 10px 15px -3px #bebdbd,
      0 4px 6px -2px #bebdbd;
    transition-duration: 0.2s;
  }

  .acceptButton:hover {
    background-color: #d6ab56;
    color: white;
    box-shadow:
      0 10px 15px -3px #bb9a57,
      0 4px 6px -2px #bb9a57;
    transition-duration: 0.2s;
  }
  /* Cấu hình hiệu ứng phóng to modal khi mở */
  #confirmationModal.open #modalContent {
    transform: scale(1); /* Phóng to modal */
    transition: transform 0.5s ease-out;
  }

  /* Cấu hình modal ở trạng thái thu nhỏ */
  #modalContent {
    transform: scale(0.5); /* Thu nhỏ modal ban đầu */
  }
  @keyframes spin3 {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(1080deg); /* 3 full rotations */
    }
  }

  /* Add hover effect */
  .hover\:rotate-animation:hover {
    animation: spin3 1s ease-in-out;
  }
</style>

<div id="confirmationModal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center hidden z-40">
  <div
    id="modalContent"
    class="bg-white text-[#BB9A57] font-bold p-6 rounded-md shadow-lg w-[100%] max-w-[600px] border-4 border-[#D6AB56] transform scale-50 transition-all duration-500 ease-out relative"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="absolute right-[3px] top-[3px] w-[30px] cursor-pointer hover:rotate-animation"
      onclick="closeModal()"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
    </svg>
    <div class="flex justify-center items-center space-x-2">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 36 24" class="w-[30px] relative -top-[10px] fill-[#F09F33]">
        <path d="m18 0 8 12 10-8-4 20H4L0 4l10 8 8-12z"></path>
      </svg>
      <h3 class="text-xl font-semibold mb-4 text-center">Subscribe.</h3>
    </div>

    <p class="text-lg mb-6 text-gray-800 font-medium leading-relaxed">
      <span class="font-semibold text-accent">Upgrade to be a Subcriber now</span> for a personalized experience that ensures you're always ahead with the most valuable articles, expert tips, and
      resources.
    </p>

    <div class="flex justify-center space-x-4">
      <form action="/buy-premium" method="POST">
        <button class="acceptButton bg-[#248BDA] text-black rounded-md hover:bg-[#3d82b8]">Accept</button>
      </form>

      <button class="declineButton bg-gray-300 text-black rounded-md hover:bg-gray-400" onclick="closeModal()">Decline</button>
    </div>
  </div>
</div>

<script>
  function closeModal() {
    const modal = document.getElementById('confirmationModal');
    const modalContent = document.getElementById('modalContent');

    // Xóa lớp 'open' để dừng hiệu ứng phóng to
    modal.classList.remove('open');

    // Ẩn modal sau khi hoàn thành hiệu ứng
    setTimeout(() => {
      modal.classList.add('hidden');
    }, 10); // Đợi cho hiệu ứng phóng to kết thúc trước khi ẩn modal
  }
</script>
