<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
      .flipbook-container {
        /* display: grid; */
        /* place-content: center; */
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        flex-direction: column;
        height: 100vh;
        overflow: hidden;
        background: white;
        box-shadow: inset 2px 2px 10px black;
      }

      .flipbook {
        width: 1000px;
        height: 600px;
      }

      .flipbook .hard {
        background-color: white;
        color: black;
        font-weight: bold;
        border: none;
      }

      .flipbook .hard small {
        font-style: italic;
        font-weight: lighter;
        opacity: 0.7;
        font-size: 14px;
      }

      .flipbook .page {
        background: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 10px;
        border: 1px solid rgba(0, 0, 0, 0.11);
      }

      .page img {
        width: 70%;
        object-fit: cover;
        margin: auto;
      }

      .flipbook .page small {
        font-size: 14px;
        margin-bottom: 10px;
      }
    </style>
  </head>

  <body>
    <div class="flipbook-container">
      <div class="flipbook font-serif"></div>
      <div class="cursor-pointer shadow-lg hover:scale-105 transition-all duration-300" style="position: sticky; background-color: black; height: fit-content; width: fit-content; border-radius: 50px">
        <div
          id="back-to-default-mode"
          data-short-text="D"
          data-full-text="Default"
          class="flex flex-col justify-center items-center"
          style="height: fit-content; width: fit-content; background-color: white; border-radius: 30px; margin: 2px; padding: 10px"
        >
          Back to Default
        </div>
      </div>
    </div>

    <script src="/js/NewspaperFlipEffect/jquerry.js"></script>
    <script src="/js/NewspaperFlipEffect/turn.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Back to Default Mode
        document.querySelector('#back-to-default-mode').addEventListener('click', () => {
          document.querySelector('#reader-mode-2').style.display = 'block';
          document.querySelector('#reader-mode-1').style.display = 'none';
        });

        // Content of Flipbook
        let html = '';
        html += `<div class="w-full h-full"><img src="<%=image%>" class="w-full h-full object-cover" alt="" style="width: 500px"/></div>`;
        html += `<div class="hard text-4xl text-center"><%=title%><small><%=author%></small></div>`;

        const limit = 650;
        const content = `<%=content%>`;
        const numsOfPage = Math.ceil(content.length / limit);
        let count = 0;
        for (let i = 0; i < numsOfPage; i++) {
          const splitContent = content.slice(count, count + limit);
          count += limit;
          html += `<div><div class="text-xl text-justify" style="padding: 0px 50px">${splitContent}</div></div>`;
        }
        html += `<div class="hard"></div>`;
        document.querySelector('.flipbook').innerHTML = html;
        $('.flipbook').turn();
      });
    </script>
  </body>
</html>
