<div class="relative px-10 z-0 bg-white flex flex-col justify-center items-center" style="padding-bottom: 100px">
  <%- include('../../layouts/partials/Header', { sections: sections }) %>
  <div id="reader-mode-1" class="flex flex-col justify-center items-center w-full lg:pt-[100px]">
    <%- include('./ContentDisplayLayout/DefaultContent.ejs', {content: content})%>
    <hr />
  </div>
  <div id="reader-mode-2" class="hidden">
    <%- include('./ContentDisplayLayout/FlipContent.ejs', {title: title, content: content, image: images, author: author})%>
    <hr />
  </div>
  <div class="mt-8 sm:w-[90%] w-[95%]"><%- include('CommentList', { articleSlug: articleSlug, sectionSlug: sectionSlug, comments: comments, profile: profile }) %></div>
  <div class="mt-8 sm:w-[90%] w-[95%]"><%- include('ReadMore', { articles: articles }) %></div>
</div>
