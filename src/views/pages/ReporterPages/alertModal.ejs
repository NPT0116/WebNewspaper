<div id="empty-title-alert" class="animate__animated animate__bounceIn hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center z-50">
  <div class="bg-white p-6 rounded-lg shadow-lg lg:w-1/3 w-5/6">
    <div class="flex items-center mb-4 justify-center">
      <div class="flex justify-center items-center">
        <img class="object-center w-20 h-20" src="/gif/alert.gif" alt="alert" />
      </div>
    </div>
    <p class="mb-4 text-gray-600">Title of the article cannot be left empty. Please provide a valid title before saving.</p>
    <div class="flex justify-center">
      <button id="close-modal" class="bg-yellow-500 hover:bg-yellow-600 text-white py-2 px-4 rounded-lg font-semibold">Close</button>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('empty-title-alert');
    const closeModal = document.getElementById('close-modal');

    // Close modal
    closeModal.addEventListener('click', () => {
      modal.classList.add('hidden'); // Hide modal
    });

    // Close modal when clicking outside
    modal.addEventListener('click', (event) => {
      if (event.target === modal) {
        modal.classList.add('hidden');
      }
    });
  });
</script>
