<div
  id="user-info-drawer"
  class="transition-transform duration-2000 right-0 top-0 translate-x-full fixed z-50 h-screen w-2/5 overflow-y-auto bg-white p-4 dark:bg-gray-800"
  tabindex="10"
  aria-labelledby="drawer-js-label"
>
  <h5 id="drawer-js-label" class="mb-4 inline-flex items-center text-base font-semibold text-[#249AFF] dark:text-gray-400">
    <svg class="me-2 h-5 w-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
    </svg>
    Info
  </h5>
  <button
    type="button"
    aria-controls="user-info-drawer"
    data-drawer-hide="user-info-drawer"
    class="absolute right-2.5 top-2.5 inline-flex h-8 w-8 items-center justify-center rounded-lg bg-transparent text-sm text-gray-400 hover:bg-gray-200 hover:text-gray-900 dark:hover:bg-gray-600 dark:hover:text-white"
  >
    <svg class="h-3 w-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
    </svg>
    <span class="sr-only">Close menu</span>
  </button>
  <div class="p-3">
    <div class="flex items-center justify-center mb-2">
      <a href="#">
        <img
          class="w-[100px] h-[100px] rounded-full"
          src="https://static.vecteezy.com/system/resources/previews/002/002/403/non_2x/man-with-beard-avatar-character-isolated-icon-free-vector.jpg"
          alt="Jese Leos"
        />
      </a>
    </div>
    <div class="flex flex-col items-center">
      <p class="text-[20px] font-bold font-serif leading-none text-gray-900 dark:text-white">
        <a href="#" id="name"></a>
      </p>
      <p class="mb-3 text-sm font-normal">
        <a href="#" id="username" class="hover:underline text-[#8d8d8d]"></a>
      </p>
    </div>

    <div class="p-6 bg-white rounded-lg shadow">
      <!-- Name Fields -->
      <div class="mb-4 flex gap-2 justify-between">
        <label class="text-sm font-medium text-gray-700 mb-2 flex items-center w-1/4">Name</label>
        <div class="flex flex-1 space-x-4">
          <input
            id="name-input"
            type="text"
            placeholder="First Name"
            class="w-full border bg-gray-100 cursor-not-allowed border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            value="AmÃ©lie"
            disabled
            readonly
          />
        </div>
      </div>

      <!-- Email Address Field -->
      <div class="mb-4 flex gap-2 justify-between">
        <label class="text-sm font-medium text-gray-700 mb-2 flex items-center w-1/4">Email address</label>
        <div class="flex flex-1 space-x-4">
          <input
            type="email"
            id="email-input"
            placeholder="Email Address"
            class="w-full border bg-gray-100 cursor-not-allowed border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            value="amelie@untitledui.com"
            disabled
            readonly
          />
        </div>
      </div>

      <!-- Username Field -->
      <div class="mb-4 flex gap-2 justify-between">
        <label class="block text-sm font-medium text-gray-700 mb-2 w-1/4">Username</label>
        <div class="flex flex-1 items-center border border-gray-300 rounded-md focus-within:ring-2 focus-within:ring-blue-500 focus-within:border-transparent">
          <input
            type="text"
            id="username-input"
            placeholder="Username"
            class="w-full border bg-gray-100 cursor-not-allowed border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            value="amelie"
            disabled
            readonly
          />
        </div>
      </div>
      <div class="mb-4 flex gap-2 justify-between">
        <label class="text-sm font-medium text-gray-700 mb-2 flex items-center w-1/4">Date of birth</label>
        <div class="flex flex-1 items-center border border-gray-300 rounded-md focus-within:ring-2 focus-within:ring-blue-500 focus-within:border-transparent">
          <input
            type="email"
            placeholder="Email Address"
            id="dob-input"
            class="w-full border bg-gray-100 cursor-not-allowed border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            disabled
            readonly
          />
        </div>
      </div>

      <div class="mb-4 flex gap-2 justify-between">
        <label class="text-sm font-medium text-gray-700 mb-2 flex items-center w-1/4">Role</label>
        <div class="flex flex-1 items-center border border-gray-300 rounded-md focus-within:ring-2 focus-within:ring-blue-500 focus-within:border-transparent">
          <input
            type="email"
            placeholder="Email Address"
            class="w-full border bg-gray-100 cursor-not-allowed border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            value="Reader"
            disabled
            readonly
          />
        </div>

        <!-- Subscribe Field -->
      </div>
      <div class="mb-4 flex gap-2 justify-between">
        <label class="text-sm font-medium text-gray-700 mb-2 flex items-center w-1/4">Subscription</label>
        <div class="flex flex-1 space-x-4">
          <input
            disabled
            readonly
            id="expires-at"
            datepicker
            datepicker-format="mm-dd-yyyy"
            type="text"
            class="w-full border bg-gray-100 cursor-not-allowed border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
        </div>
      </div>
    </div>
    <h1 class="text-xl font-bold py-4">Recently watched articles:</h1>
    <ul id="article-list" class="max-w-md mt-4 divide-y divide-gray-200 dark:divide-gray-700"></ul>
  </div>
</div>
