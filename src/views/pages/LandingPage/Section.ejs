<div id="card-container" class="mt-4 mb-4 z-0 flex flex-col justify-center items-center">
  <% if (title === 'Hot News') {%>
  <div class="w-1/3 flex justify-center items-center"><img class="object-center" src="/images/landingPageComponents/goat-animated.gif" alt="" /></div>
  <%} else if (title === 'Most Viewed Articles') {%>
  <div class="w-1/3 flex justify-center items-center"><img class="object-center" src="/images/landingPageComponents/1.webp" alt="" /></div>
  <%} else if (title === 'Latest Articles') {%>
  <div class="w-1/3 flex justify-center items-center"><img class="object-center" src="/images/landingPageComponents/3.webp" alt="" /></div>
  <%} %>
  <div class="text-center py-4 font-bold font-serif text-4xl"><%= title %></div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
    <% articles.forEach((article) => { %>
    <div id="card-section4" class="p-4 bg-white shadow-xl rounded-lg" style="height: 80vh">
      <%- include('../../components/Newspaper/NewspaperCard', { article: article, section: article.section }) %>
    </div>
    <% }) %>
  </div>
</div>
