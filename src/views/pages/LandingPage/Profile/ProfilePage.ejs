<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <style>
      .flip-card {
        background-color: transparent;
        height: 100vh;
        perspective: 1000px;
      }

      .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        transition: transform 0.8s;
        transform-style: preserve-3d;
      }

      .flip-card.flipped .flip-card-inner {
        transform: rotateY(180deg);
      }

      .flip-card-front,
      .flip-card-back {
        position: absolute;
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100%;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
        border-radius: 1rem;
      }

      .flip-card-back {
        transform: rotateY(180deg);
      }
      .Btn {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        width: 100px;
        height: 40px;
        border: none;
        padding: 0px 20px;

        color: black;
        font-weight: 500;
        cursor: pointer;
        border-radius: 10px;
        transition-duration: 0.3s;
        border: 1px solid #cec3c3;
      }

      .svg {
        width: 13px;
        position: absolute;
        right: 0;
        margin-right: 20px;
        fill: black;
        transition-duration: 0.3s;
      }

      .Btn:hover {
        color: transparent;
      }

      .Btn:hover svg {
        right: 43%;
        margin: 0;
        padding: 0;
        border: none;
        transition-duration: 0.3s;
      }

      .Btn:active {
        transform: translate(3px, 3px);
        transition-duration: 0.3s;
        box-shadow: 2px 2px 0px rgb(140, 32, 212);
      }
    </style>
  </head>
  <body>
    <% if (isSendOtp) { %>
    <%- include('../../../components/sendOtp/sendOtpModal.ejs') %>
    <% } %>
    <div class="z-20"><%- include('../../../layouts/partials/HeaderTitle', { profile:profile }) %></div>
    <div class="relative z-20"><%- include('../../../layouts/partials/Header', { sections: sections }) %></div>
    <div class="flex mx-[5%] lg:ml-[17%]">
      <div class="my-[5%] mt-[50px] sm:flex lg:space-x-[5%] sm:space-x-[5%] w-[100%] md:w-[80%]">
        <div class="md:w-[45%] lg:w-[35%] z-20 sm:z-10 relative"><%- include('../../../components/Profile/ProfileSideNav.ejs', {selected: 'profile'}) %></div>

        <div class="w-[100%] md:w-[60%] lg:w-[65%]">
          <% if (isSubscriber) { %>
          <div class="w-full text-center text-[14px]">
            <div class="w-full bg-gradient-to-r from-[#053549] via-[#BCE5D1] to-[#053549] text-[#0A3981] font-extrabold text-lg rounded-md shadow-lg transform transition-all hover:scale-105">
              Premium
            </div>
          </div>
          <% } %>
          <div class="flip-card">
            <div class="flip-card-inner">
              <div class="flip-card-front"><%- include('../../../components/Profile/FrontProfile.ejs') %></div>
              <div class="flip-card-back"><%- include('../../../components/Profile/BackProfile.ejs') %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="layout" class=""><%- include('../../../layouts/partials/Footer.ejs', { section1: sections.slice(0, 5), section2: sections.slice(5, 10) })%></div>
  </body>
  <script>
    function toggleFlipCard() {
      const flipCard = document.querySelector('.flip-card');
      flipCard.classList.toggle('flipped');
    }
  </script>
</html>
