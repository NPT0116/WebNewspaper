  <div class="pb-10 border-b-2 border-black">
    <%- include('Section', { title: 'Most Viewed Articles', articles: data.mostViewedArticles.slice(1, 5) }) %> <%- include('Banner', { article: data.mostViewedArticles[0], code: 1 }) %>
  </div>
  <div class="pb-10 border-b-2 border-black">
    <%- include('Section', { title: 'Latest Articles', articles: data.latestArticles.slice(1, 5) }) %> <%- include('Banner', { article: data.latestArticles[0], code: 2 }) %>
  </div>
  <div><%- include('Section10', { title: 'Top Sections', articles:data.topSections })%></div>
</div>
<%- include('../../components/subscriptionModal/subscription.ejs') %>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    let hasScrolled = false;

    let lastScrollY = 0;
    let directionalScroll = true;
    let isTop = true;
    const handleScroll = () => {
      if (window.scrollY >= lastScrollY) {
        directionalScroll = true;
      } else {
        directionalScroll = false;
      }
      lastScrollY = window.scrollY;

      if (isTop && directionalScroll) {
        const viewportHeight = window.innerHeight;
        window.scrollTo({
          top: viewportHeight,
          behavior: 'smooth'
        });
      }
      isTop = window.scrollY === 0 ? true : false;
    };
    window.addEventListener('scroll', handleScroll);
  });
</script>
