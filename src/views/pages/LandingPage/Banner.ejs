<% if (code == 1) { %>
<div class="relative grid grid-cols-1 md:grid-cols-2 h-screen shadow-xl rounded">
  <div class="relative h-full w-full flex justify-center items-center flex-col p-5">
    <div id="top-title" class="text-4xl font-dancing text-center">
      <a href="section/<%=article.section.slug%>/article/<%=article.slug%>?isSubscribed=<%= article.isSubscribed%>" class="hover:underline <% if (article.isSubscribed) {%> text-red-600 <%}%>"
        ><%= article.title %></a
      >
    </div>

    <div id="top-content" class="flex justify-center items-center flex-col my-3">
      <% if (article.isSubscribed && profile && profile.isSubscriber || !article.isSubscribed) {%>
      <p class="text-center font-dancing text-lg italic">
        <a href="section/<%=article.section.slug%>/article/<%=article.slug%>?isSubscribed=<%= article.isSubscribed%>" class="hover:underline"><%= article.description %></a>
      </p>
      <%} %>
    </div>

    <div class="flex flex-row justify-between w-full px-2">
      <div id="banner-publish-time-<%=article.slug%>" class="text-sm italic font-serif">
        <%= new Date(article.publishedAt).toLocaleString('en-GB', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit', }).replace(', ', ' ') %>
      </div>
      <div id="top-author" class="self-end font-sans italic font-bold text-gray-800 hover:text-gray-900">"<%= article.author && article.author.name ? article.author.name : 'Unknown author' %>"</div>
    </div>
  </div>
  <div class="relative h-full w-full rounded overflow-hidden">
    <a href="section/<%=article.section.slug%>/article/<%=article.slug%>?isSubscribed=<%= article.isSubscribed%>">
      <img src="<%=article.images%>" alt="" class="w-full h-full object-cover" />
    </a>
  </div>
</div>
<% } else {%>

<div class="relative grid grid-cols-1 md:grid-cols-2 h-screen shadow-xl rounded">
