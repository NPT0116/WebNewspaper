<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Articles in Section <%= articles.title %></title>
  <!-- <link rel="stylesheet" href="/css/styles.css" /> -->
</head>
<body>
  <h1 class=""><%= section.name %></h1>
  <div>
    <ul>
      <% articles.forEach(article => { %>
        <li>
          <h2><a href="/<%= section.slug %>/<%= article.slug %>"><%= article.title %></a></h2>
          <p><%= article.description %></p>
          <p>Author: <%= article.author.name %></p>
          <p>Tags: 
            <% article.tags.forEach(tag => { %>
              <span><%= tag.name %></span>
            <% }) %>
          </p>
          <img src="<%= article.images[0] %>" alt="<%= article.title %>" style="width: 200px; height: auto;">
        </li>
      <% }) %>
    </ul>
  </div>
  <%- include('../../components/Pagination/Pagination', { pagination, section }) %>
</body>
</html>
